<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="294.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainFormController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="Student Form">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Separator layoutX="14.0" layoutY="38.0" prefHeight="1.0" prefWidth="569.0" />
      <TextField fx:id="txtId" layoutX="14.0" layoutY="48.0" prefHeight="25.0" prefWidth="88.0" promptText="id" />
      <TextField fx:id="txtName" layoutX="109.0" layoutY="48.0" prefHeight="25.0" prefWidth="103.0" promptText="name" />
      <TextField fx:id="txtAddress" layoutX="220.0" layoutY="48.0" prefHeight="25.0" prefWidth="103.0" promptText="address" />
      <Button fx:id="btn" layoutX="332.0" layoutY="48.0" mnemonicParsing="false" onAction="#btnSubmit" text="Save Student">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <TableView fx:id="tblStudent" layoutX="15.0" layoutY="82.0" prefHeight="200.0" prefWidth="569.0">
        <columns>
          <TableColumn fx:id="colId" prefWidth="75.0" text="#Id" />
          <TableColumn fx:id="colName" prefWidth="134.0" text="Name" />
            <TableColumn fx:id="colAddress" prefWidth="164.0" text="Address" />
            <TableColumn fx:id="colDel" prefWidth="96.0" text="Delete" />
            <TableColumn fx:id="colUpdate" prefWidth="98.0" text="Update" />
        </columns>
      </TableView>
   </children>
</AnchorPane>
